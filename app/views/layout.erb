<html lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <title>Ghibli Fan Reviews</title>
</head>
<body>
    <div class="wrapper">
      <h1> Ghibli Fan Reviews</h1>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Navbar</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="navcustom">
            <% if logged_in? %>
              <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Search</a>
              </li>
              <li class="nav-item">
              <a class="nav-item nav-link" href="/ghiblis">Film Archive</a>
              </li>
              <li class="nav-item">
              <a class="nav-link" href="/reviews/new"> Create a new Review </a>
              </li>
              <li class="nav-item">
              <a class="nav-link" href="/users/<%=current_user.slug%>"> Your reviews </a>
              </li>
              <li class="nav-item">
              <a class="nav-link" href="/logout"> Log Out </a>
              </li>
            <% else %>
              <li class="nav-item">
              <a class="nav-item nav-link active" href="/">Home<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
              <a class="nav-item nav-link" href="/ghiblis">Film Archive</a>
              </li>
              <li class="nav-item">
              <a class="nav-item nav-link" href="/signup">Sign Up</a>
              </li>
              <li class="nav-item">
              <a class="nav-item nav-link" href="/login"> Log In </a>
              </li>
            <% end %>
          </ul>
          <form class="d-flex">
            <input class="form-control me-2" type="search-input" placeholder="Search..." aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>           
          </div> 
        </div>
      </nav>
    </div>
  <%= yield %>
    <div class='error_message'>
      <% if !!flash[:error] %>
        <%= flash[:error] %>
      <% end %>
        
    </div>
        <footer class="branding">
          <small>&copy; 2021 <strong>Ghibli Fan Reviews</strong></small>
        </footer>

      <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
      <!--[if lt IE 7]>
        <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
        <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
      <![endif]-->
    
</body>
</html>







